	<form method="POST" action="register.php" onsubmit="return checkpassword()">
		<div class="register">
			<h1 class="reg-h1">Online Registeration</h1>
			<h3 class="reg-h3">The Pearl Boat Safari Management System</h3>
		
			<label>First Name</label><br/>
			<input type="text" id="fName" placeholder="First Name" name="fname" required><br/><br/>
			
			<label>Last Name</label><br/>
			<input type="text" id="lName" placeholder="Last Name" name="lname" required><br/><br/>
		
			<label>Gender</label><br/>
			<input type="radio" id="Male" name="gender" checked>Male
			<input type="radio" id="Female" name="gender">Female<br/><br/>
		
			<label>Email</label><br/>
			<input type="text" id="Email" name="mail" placeholder="abc@gmail.com" required><br/>
		
			<label>Contact Number</label><br/>
			<input type="number" id="contact" name="mobile" placeholder="07**********" required><br/>
		
			<label>Address</label><br/>
			<textarea rows="8" cols="60" placeholder="Address" name="address" required></textarea><br/><br/>
		
			<label>DOB : </label><br/>
			<input type="date" id="dob" name="DOB"><br/><br/>
		
			<label>Password : </label><br/>
			<input type="password" id="pwd" name="pass" placeholder="Enter Password"  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{5,10}" required><br/><br/>
		
			<label>Re-enter Password : </label><br/>
			<input type="password" id="confirm" name="confirmpass" placeholder="Re-enter Password" required><br/><br/>
			
			<input type="checkbox" class="privacybox" >Accept privacy policies<br/><br/>
			<input type="submit" class="submitbtn" name="btnsubmit" onclick="return vaild()">
			<input type="button" class="resetbtn" value="reset">
		
		</div>
		
	</form>
	
